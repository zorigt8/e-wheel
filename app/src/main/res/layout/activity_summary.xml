<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zorigt.e_wheel.SummaryActivity">

    <TextView
        android:text="Your summary of feelings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="40dp"
        android:id="@+id/textView_happy" />

    <TextView
        android:text="Joyful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_joyful"
        android:layout_alignTop="@+id/textView_happy"
        android:visibility="invisible" />

    <TextView
        android:text="Liberated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_liberated"
        android:layout_below="@+id/textView_joyful"
        android:layout_alignStart="@+id/textView_joyful"
        android:visibility="invisible" />

    <TextView
        android:text="Ecstatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ecstatic"
        android:layout_below="@+id/textView_liberated"
        android:layout_alignStart="@+id/textView_liberated"
        android:visibility="invisible" />

    <TextView
        android:text="Proud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_proud"
        android:layout_below="@+id/textView_ecstatic"
        android:layout_alignStart="@+id/textView_ecstatic"
        android:visibility="invisible" />

    <TextView
        android:text="Important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_important"
        android:layout_below="@+id/textView_proud"
        android:layout_alignStart="@+id/textView_proud"
        android:visibility="invisible" />

    <TextView
        android:text="Confident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_important"
        android:layout_alignEnd="@+id/textView_important"
        android:id="@+id/textView_confident"
        android:visibility="invisible" />

    <TextView
        android:text="Surprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_confident"
        android:layout_alignEnd="@+id/textView_happy"
        android:layout_marginTop="63dp"
        android:id="@+id/textView_surprise" />

    <TextView
        android:text="Startled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_confident"
        android:id="@+id/textView_startled"
        android:layout_alignTop="@+id/textView_surprise"
        android:visibility="invisible" />

    <TextView
        android:text="Excited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_dismayed"
        android:layout_alignStart="@+id/textView_dismayed"
        android:id="@+id/textView_excited"
        android:visibility="invisible" />

    <TextView
        android:text="Shocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_shocked"
        android:layout_below="@+id/textView_startled"
        android:layout_alignStart="@+id/textView_startled"
        android:visibility="invisible" />

    <TextView
        android:text="Dismayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_dismayed"
        android:layout_below="@+id/textView_shocked"
        android:layout_alignStart="@+id/textView_shocked"
        android:visibility="invisible" />

</RelativeLayout>
