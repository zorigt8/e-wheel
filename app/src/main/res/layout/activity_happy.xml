<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_happy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zorigt.e_wheel.HappyActivity">

    <TextView
        android:text="Happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <Switch
        android:text="Joyful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox_liberated"
        android:layout_alignParentStart="true"
        android:id="@+id/switch_joyful" />

    <CheckBox
        android:text="Ecstatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_ecstatic"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/checkBox_liberated"
        android:layout_alignBottom="@+id/checkBox_liberated"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:text=" Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_important"
        android:visibility="invisible"
        android:layout_alignTop="@+id/btn_next"
        android:layout_alignStart="@+id/checkBox_liberated" />

    <Switch
        android:text="Proud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_proud"
        android:layout_alignBottom="@+id/checkBox_important"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Confident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_confident"
        android:visibility="invisible"
        android:layout_alignTop="@+id/btn_next"
        android:layout_alignStart="@+id/checkBox_ecstatic" />

    <CheckBox
        android:text="Liberated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_liberated"
        android:visibility="invisible"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/checkBox_important"
        android:layout_toEndOf="@+id/switch_joyful" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/happy"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/checkBox_ecstatic"
        android:layout_alignParentStart="true" />
</RelativeLayout>
